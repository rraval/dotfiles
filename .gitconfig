[user]
	name = Ronuk Raval
	email = ronuk.raval@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
[core]
    whitespace = fix
[alias]
    p = pull
    up = pull --rebase
    com = commit
    acom = commit -a
    co = checkout
    d = diff
    stat = diff --stat
    st = status
    fliptable = "!echo '(╯°□°）╯︵ ┻━┻'; git reset --hard HEAD"
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[push]
	default = simple
