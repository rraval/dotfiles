[user]
	name = Ronuk Raval
	email = ronuk.raval@gmail.com
[color]
	diff = auto
	status = auto
	branch = auto
[core]
    whitespace = fix
[alias]
    # working -> index
    ap = add -p
    com = commit

    # information
    st = status -sb
    d = diff
    cached = diff --cached
    stat = diff --stat

    # index -> working
    b = branch
    co = checkout
    fliptable = "!echo '(╯°□°）╯︵ ┻━┻'; git reset --hard HEAD"

    # dealing with others
    up = pull --rebase
    cont = rebase --continue
    ff = merge --ff-only

    # miscellaneous
    j = jump
    subtree = subtree.sh
[mergetool "fugitive"]
	cmd = vim -f -c \"Gdiff\" \"$MERGED\"
[merge]
	tool = fugitive
[push]
	default = simple
